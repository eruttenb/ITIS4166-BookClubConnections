<%- include('../partials/header.ejs')%>
    <main>
        <form action='/connections' method="POST">
            <table>
                <tr>
                    <td><label for="topic">Topic</label></td>
                    <td><input type="text" id="topic" name="topic" placeholder="topic" required></td>
                </tr>
                <tr>
                    <td><label for="title">Title</label></td>
                    <td><input type="text" id="title" name="title" placeholder="title" required></td>
                </tr>
                <tr>
                    <td><label for="details">Details</label></td>
                    <td><input type="text" id="details" name="details" placeholder="description" required minLength="10"></td>
                </tr>
                <tr>
                    <td><label for="location">Where</label></td>
                    <td><input type="text" id="location" name="location" placeholder="location" required></td>
                </tr>
                <tr>
                    <td><label for="date">When</label></td>
                    <td><input type="date" id="date" name="date" required></td>
                </tr>
                <tr>
                    <td><label for="start">Start</label></td>
                    <td><input type="time" id="start" name="start" required></td>
                </tr>
                <tr>
                    <td><label for="end">End</label></td>
                    <td><input type="time" id="end" name="end" required></td>
                </tr>
                <tr>
                    <td><label for="image">Image URL</label></td>
                    <td><input type="url" id="image" name="image" placeholder="imageURL" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Create Connection"></td>
                </tr>
            </table>
        </form>
    </main>
    <%- include('../partials/footer.ejs')%>